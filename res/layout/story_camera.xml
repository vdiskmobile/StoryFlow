<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"/>

    <RelativeLayout
        android:id="@+id/cameraLayout"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:background="@drawable/foot_bg" 
        android:visibility="visible"
       android:layout_gravity="center_vertical"
        >

       
        
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_public_camera"
            android:drawableLeft="@drawable/btn_camera_cancel"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
             android:layout_marginTop="12dp"
             android:layout_marginLeft="10dp"
             android:layout_marginBottom="2dp"/>
        

        <RelativeLayout  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/camera_bottom_bg"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            >
            
            <ImageView
            android:id="@+id/btnCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:src="@drawable/tab_camera"
            />
            
        </RelativeLayout>
        
        

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_public_camera"
            android:drawableLeft="@drawable/btn_camera_gallery"
                android:layout_marginTop="12dp"
                 android:paddingLeft="5dp"
            android:paddingRight="5dp"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="2dp"/>
    </RelativeLayout>
        
        <RelativeLayout
        android:id="@+id/previewLayout"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:background="@drawable/foot_bg" 
        android:visibility="gone"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnRetake"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
              android:background="@drawable/btn_public_camera"
            android:drawableLeft="@drawable/btn_camera_retry"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
             android:layout_marginTop="12dp"
             android:layout_marginLeft="10dp"
             android:layout_marginBottom="2dp"/>

        <Button
            android:id="@+id/btnUsePicture"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
              android:background="@drawable/btn_public_camera"
            android:drawableLeft="@drawable/btn_camera_use" 
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
             android:layout_marginTop="12dp"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="2dp"/>
    </RelativeLayout>
        
        
</LinearLayout>